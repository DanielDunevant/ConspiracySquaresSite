<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
         http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
		 
  <servlet>
    <servlet-name>Servlet_CreateServer</servlet-name>
    <servlet-class>com.novaytechnologies.conspiracysquares.Servlet_CreateServer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Servlet_CreateServer</servlet-name>
    <url-pattern>/Servlet_CreateServer</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Servlet_JoinPrivateServer</servlet-name>
    <servlet-class>com.novaytechnologies.conspiracysquares.Servlet_JoinPrivateServer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Servlet_JoinPrivateServer</servlet-name>
    <url-pattern>/Servlet_JoinPrivateServer</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Servlet_GetServerInfo</servlet-name>
    <servlet-class>com.novaytechnologies.conspiracysquares.Servlet_GetServerInfo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Servlet_GetServerInfo</servlet-name>
    <url-pattern>/Servlet_GetServerInfo</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Servlet_CheckJoined</servlet-name>
    <servlet-class>com.novaytechnologies.conspiracysquares.Servlet_CheckJoined</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Servlet_CheckJoined</servlet-name>
    <url-pattern>/Servlet_CheckJoined</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Servlet_ListServers</servlet-name>
    <servlet-class>com.novaytechnologies.conspiracysquares.Servlet_ListServers</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Servlet_ListServers</servlet-name>
    <url-pattern>/Servlet_ListServers</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>lock.jsp</welcome-file>
  </welcome-file-list>

  <filter>
    <filter-name>ObjectifyFilter</filter-name>
    <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ObjectifyFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.novaytechnologies.conspiracysquares.OfyHelper</listener-class>
  </listener>
</web-app>
